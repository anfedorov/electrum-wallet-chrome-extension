{
  "name": "A Bitcoin Wallet",
  "version": "0.1",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "lib/bitcoinjs/build/bitcoinjs-min.js",
      "lib/AES.js",
      "misc.js",
      "config.js",
      "key_manager.js",
      "interface.js",
      "wallet.js",
